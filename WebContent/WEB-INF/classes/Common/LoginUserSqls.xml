<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.COM/DTD SQL MAP 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Common.LoginUser">

	<resultMap id="resultLoginUser" class="Common.LoginUser">
		<result property="id" column="ID" />
		<result property="password" column="PASSWORD" />
		<result property="name" column="NAME" />
	</resultMap>


	<select id="find" parameterClass="Common.LoginUser" resultMap="resultLoginUser">
		SELECT * FROM LoginUser
		<dynamic prepend=" WHERE ">
			<isNotEmpty prepend=" AND " property="id">
				ID = #id#
			</isNotEmpty>
			<isNotEmpty prepend=" AND " property="password">
				PASSWORD = #password#
			</isNotEmpty>
		</dynamic>
	</select>

	<select id="UserDefined" parameterClass="java.lang.String"
		resultMap="resultLoginUser">
		$value$
	</select>

	<insert id="insert" parameterClass="Common.LoginUser">
		INSERT INTO
		LoginUser ( ID, PASSWORD, NAME )
		VALUES ( #id# , #password# , #name# )
	</insert>

	<update id="update" parameterClass="Common.LoginUser">
		UPDATE WONDERGIRLS SET
		ID = #id# ,
		PASSWORD = #password#,
		NAME = #name#
		<dynamic prepend=" WHERE ">
			<isNotEmpty prepend=" AND " property="id">
				ID = #id#
			</isNotEmpty>
			<isNotEmpty prepend=" AND " property="password">
				PASSWORD = #password#
			</isNotEmpty>
		</dynamic>
	</update>

	<delete id="delete" parameterClass="Common.LoginUser">
		DELETE FROM LoginUser
		<dynamic prepend=" WHERE ">
			<isNotEmpty prepend=" AND " property="id">
				ID = #id#
			</isNotEmpty>
			<isNotEmpty prepend=" AND " property="password">
				PASSWORD = #password#
			</isNotEmpty>
		</dynamic>
	</delete>

	<statement id="drop">
		DROP TABLE LoginUser CASCADE
	</statement>
	
	<statement id="create">
		CREATE TABLE LoginUser (
			id nvarchar2(20) not null unique 
  			,password nvarchar2(20) not null
  			,name nvarchar2(40) not null ) 
	</statement>
</sqlMap>

