<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.COM/DTD SQL MAP 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Movie.Charge">

	<resultMap id="resultCharge" class="Movie.Charge">
		<result property="rNo" column="rNo" />
		<result property="rAdult" column="rAdult" />
		<result property="rTeen" column="rTeen" />

	</resultMap>

	<select id="find" parameterClass="Movie.Charge" resultMap="resultCharge">
		SELECT * FROM Charge
		<dynamic prepend=" WHERE ">
			<isNotEqual prepend=" AND " property="rNo" compareValue="0">
				rNo = #rNo#
			</isNotEqual>
		</dynamic>
	</select>


	<select id="UserDefined" parameterClass="java.lang.String"
		resultMap="resultCharge">
		$value$
	</select>

	<insert id="insert" parameterClass="Movie.Charge">
		INSERT INTO Charge (
		rNo, rAdult, rTeen
		) VALUES (
		#rNo#, #rAdult#, #rTeen#
		)
	</insert>

	<update id="update" parameterClass="Movie.Charge">
		UPDATE Charge SET
		rAdult = #rAdult#,
		rTeen = #rTeen#
		<dynamic prepend=" WHERE ">
			<isNotEqual prepend=" AND " property="rNo" compareValue="0">
				rNo = #rNo#
			</isNotEqual>
		</dynamic>
	</update>

	<delete id="delete" parameterClass="Movie.Charge">
		DELETE FROM Charge
		<dynamic prepend=" WHERE ">
			<isNotEqual prepend=" AND " property="rNo" compareValue="0">
				rNo = #rNo#
			</isNotEqual>
		</dynamic>
	</delete>

	<update id="drop">
		DROP TABLE Charge CASCADE CONSTRAINT
	</update>

	<statement id="create">
		CREATE TABLE Charge (
	rNo INTEGER NOT NULL, 
	rAdult INTEGER,
	rTeen INTEGER 
		)
	</statement>
</sqlMap>

